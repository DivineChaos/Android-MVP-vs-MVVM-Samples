<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thinkmobiles.android.samples">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".presentation.ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.thinkmobiles.android.samples.mvp.screens.NavigationActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.thinkmobiles.android.samples.mvvm.presentation.navigator.MainNavigatorViewModelImpl"/>

    </application>

</manifest>